@model TaskManagement.Buisness.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = ""; }


<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="~/js/User.js"></script>
<style>
    body {
        background-image: url('~/Image/taskmanagement.png');
        background-size: cover;
        background-position: center;
        background-repeat:no-repeat;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }
</style>
<body class="body">
    <div class="login-container">
        <!-- Your existing HTML content -->
        <div class="row">
            <div class="col-sm-12 text-center">
                <label class="text-danger" id="errorMessage">@ViewBag.Error</label>
            </div>
        </div>
        <form asp-action="Login" method="post">
            <div class="mt-3">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="mt-3">
                <button type="submit">Login</button>
            </div>
            <div>
                <p>Don't have an account? <a href="javascript:void(0);" onclick="user.redirectToRegister()">Register Here</a>.</p>
            </div>
        </form>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/js/site.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>