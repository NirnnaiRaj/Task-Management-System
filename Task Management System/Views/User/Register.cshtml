<style>
    body {
        background-image: url('file:///C:\Users\axobi\source\repos\Task Management System\Task Management System\wwwroot\Image\taskManagement.png');
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        background-color: #f5f5f5;
    }
</style>
<div class="form-container">
    <h2>@ViewData["Title"]</h2>
    <div class="text-center">
        <h1>Register</h1>
    </div>

    <form asp-action="Register" method="post">
        <div class="row">
            <div class="col-sm-12 text-center">
                <label class="text-danger" id="errorMessage">@ViewBag.Error</label>
            </div>
        </div>
        <div class="mt-3">
            <label asp-for="Username" class="required">Username:</label>
            <input asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Email" class="required">Email:</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Password" class="required">Password:</label>
            <input asp-for="Password" type="password" />
            @*<span asp-validation-for="Password"></span>*@
            @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="mt-3">
            <label asp-for="ConfirmPassword" class="required">Confirm Password:</label>
            <input asp-for="ConfirmPassword" type="password" />
            @*<span asp-validation-for="ConfirmPassword"></span>*@
            @Html.ValidationMessageFor(Model => Model.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

        <div class="mt-3">
            <button type="submit">Register</button>
        </div>
    </form>
</div>
