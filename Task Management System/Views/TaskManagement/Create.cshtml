@model TaskManagement.Buisness.ViewModels.TaskModel


    <form id="formTaskManagement" asp-area="" asp-action="Save" onsubmit="return taskManagement.saveTask(this)">
        <input type="hidden" name="Id" asp-for="@Model.Id" />
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="Title" class="required"></label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Title" class="form-control" />
                @Html.ValidationMessageFor(Model => Model.Title, "", new { @class = "text-danger" })
            </div>

            <div class="col-sm-3  d-flex align-items-center">
                <label class="form-control-label">
                    <input asp-for="Status" type="checkbox" />&nbsp;&nbsp;Is Completed
                </label>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="Description" class="required"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="Description" class="form-control" />
                @Html.ValidationMessageFor(Model => Model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="DueDate" class="required"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="DueDate" class="form-control" />
                @Html.ValidationMessageFor(Model => Model.DueDate, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="modal-footer">
            <button id="btnSubmit" type="submit" class="btn btn-success save-event waves-effect waves-light btn-sm">
                <i class="fa fa-floppy-o" aria-hidden="true"></i> Save
            </button>
        </div>
    </form>
